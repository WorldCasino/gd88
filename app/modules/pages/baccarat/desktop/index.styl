#bac-desktop .list
  margin-top: 45px
  margin-bottom: 15px
  li.ui-col
    position: relative
    padding: 25px
    > img
      width: 100%
  .seat
    position: absolute
    width: 17%
    height: 29%
    top:0
    left: 0
    background-color: #e0e6e4
    border: solid 2px #d6d6d4
    border-radius: 10px
    text-align: center
    -webkit-box-shadow:inset 0 0 20px #e0e1db
    -moz-box-shadow:inset 0 0 20px #e0e1db
    box-shadow:inset 0 0 20px #e0e1db
    //filter:alpha(opacity=50)
    -moz-opacity:0
    -khtml-opacity:0
    opacity:0
    img
      width: 50%
      margin-top: 2px
      vertical-align: bottom
    label
      display: inline-block
      font-size: 12px
      width: 90%
      padding-left: 0
      padding-right: 0
      margin-top: 2px
  .seat-show
    animation: showSeat 1s
    -moz-animation: showSeat 1s	/* Firefox */
    -webkit-animation: showSeat 1s	/* Safari 和 Chrome */
    -o-animation: showSeat 1s	/* Opera */
    opacity:1
  .seat-1
    top: 18%
    left: 2%
  .seat-2
    top: 51%
    left: 2%
  .seat-3
    top: 69%
    left: 20.5%
  .seat-4
    top: 69%
    left: 43%
  .seat-5
    top: 69%
    left: 64%
  .seat-6
    top: 51%
    left: 82%
  .seat-7
    top: 18%
    left: 82%
  .seat-box
    width: 17%
    height: 29%

@keyframes showSeat
  0%   {opacity: 0}
  100% {opacity: 1}

@-moz-keyframes showSeat /* Firefox */
  0%   {-moz-opacity: 0}
  100% {-moz-opacity: 1}

@-webkit-keyframes showSeat /* Safari 和 Chrome */
  0%   {-webkit-opacity: 0}
  100% {-webkit-opacity: 1}

@-o-keyframes showSeat /* Opera */
  0%   {-o-opacity: 0}
  100% {-o-opacity: 1}
