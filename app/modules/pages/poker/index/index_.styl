@require '/styls/import/vars.styl'
@require '/styls/import/mixins.styl'

#pok-index
  .desktop-back
    position: relative
    bottom: 0
    margin-left: 78px
    > img
      width: 100%
  .chip-box
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%
    li
      position: absolute
      > img
        height: 103px
        margin-left: 32px
        margin-top: 7px
        opacity: 0
        &.select-shade
          animation: select-shade-animation 3s
          -moz-animation: select-shade-animation 3s /* Firefox */
          -webkit-animation: select-shade-animation 3s /* Safari å’Œ Chrome */
          -o-animation: select-shade-animation 3s
      .comp-selectChip
        position: absolute
        top: 0
        left: 0
  //li:nth-child(1)

  @keyframes select-shade-animation
    0%
      opacity: 1
    25%
      opacity: 0
    50%
      opacity: 1
    100%
      opacity: 0
