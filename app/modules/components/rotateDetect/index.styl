@require '/styls/import/vars.styl'
@require '/styls/import/mixins.styl'

#comp-rotateDetect
  width: 100%
  height: 100%
  position: fixed
  top: 0
  bottom: 0
  background: rgba(0, 0, 0, .5)
  color: #fff
  text-align: center
  display: none
  .ui-txt-muted
    left: 50px
  .gd88-iphone
    font-size: 180px
    position: relative
  .content
    position: absolute
    top: 50%
    left: 50%
    margin-top: -125px
    margin-left: -100px
  .convert
    -webkit-transform: rotate(-90deg)
    position: absolute
    top: 66px
    left: -10px
