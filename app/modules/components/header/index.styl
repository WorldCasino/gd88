@require '/styls/import/vars.styl'
@require '/styls/import/mixins.styl'

.ui-header
  background-color: #023605
  color: #dcd17f
  font-size: 16px
  .return
    font-size: 22px
    margin-left: 25px
  .link
    -webkit-box-flex: 10
    margin-left: -25px
    a
      padding: 0 20px
      height: 100%
      display: inline-block
  .setting
    line-height: 1.5
    font-size: 12px
    img
      margin-top: 8px
      margin-left: 10px
  .ui-icon-return
    color: #fff

#comp-setDialog
  //display: none
  width: 100%
  height: 100%
  position: fixed
  top: 0
  bottom: 0
  z-index: 99999
  .dialog-box
    //display: none
    width: 300px
    border-radius: 5px
    background-color: rgba(0,0,0,.7)
    .title
      display: inline-block
      width: 100%
      font-size: 14px
      text-align: center
      line-height: 30px
    > *
      color: #ffffff
  .dialog-icon-lg
    display: inline-block
    vertical-align: middle
    ik-icon('imgs/oval_red_hook_red_choice.png', 22px, 22px)
  div.ui-form-item
    padding-left: 10px
    height: 50px
    line-height: 50px
    p
      font-size: 14px
      margin-left: 10px
    label.ui-switch
      right: 10px
      width: auto

  .m-options
    font-size: 14px
    line-height: 30px
    .ui-col
      text-align: center
      &.select span:before
        content: ''
        width: 6px
        height: 6px
        background-color: #77b1d7
        border-radius: 50%
        position: absolute
        top: 50%
        left: 50%
        margin-top: -3px
        margin-left: -3px
        -moz-box-shadow:0px -1px 3px #3f6d91 inset              /* For Firefox3.6+ */
        -webkit-box-shadow:0px -1px 3px #3f6d91 inset           /* For Chrome5+, Safari5+ */
        box-shadow:0px -1px 3px #3f6d91 inset                   /* For Latest Opera */
    span
      width: 18px
      height: 18px
      display: inline-block
      border: solid 1px #ffffff
      border-radius: 50%
      background-color: #e9e9e9
      vertical-align: middle
      margin-right: 3px
      position: relative
      -moz-box-shadow:1px 1px 2px #999 inset               /* For Firefox3.6+ */
      -webkit-box-shadow:1px 1px 2px #999 inset            /* For Chrome5+, Safari5+ */
      box-shadow:1px 1px 2px #999 inset                    /* For Latest Opera */

  .voice-strip
    padding-left: 10px
    padding-bottom: 10px
    margin-top: 5px
    h5
      font-size: 14px
      padding-bottom: 5px
  .dialog-icon-horn
    display: inline-block
    vertical-align: middle
    ik-icon('imgs/volume.png', 14px, 14px)
  .operate-strip
    width: 260px
    height: 2px
    display: inline-block
    vertical-align: middle
    background-color: #abbbae
    position: relative
    label
      position: absolute
      left: 0
      top: 0
      width: 0
      height: 2px
      background-color: #0678f2
    span
      position: absolute
      width: 24px
      height: 24px
      top: -12px
      left: 50%
      border-radius: 50%
      background-color: #ffffff


