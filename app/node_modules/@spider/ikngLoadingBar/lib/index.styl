body
  -webkit-user-select: none
  -webkit-text-size-adjust: 100%
  -webkit-tap-highlight-color: transparent
  outline: 0

#ikngLoading
  position: relative
  z-index: 9999
  .loading 
    width: 45px
    height: @width
    display: block
    background: url(./imgs/loading.png)
    -webkit-background-size: auto @width
    -webkit-animation: am-rotate 1.5s steps(15) infinite
    position: fixed
    left: 50%
    top: 50%
    margin-left: - ( @width / 2 )
    margin-top: - ( @width / 2 )
  .shade
    width: 100%
    height: 100%
    position: fixed
    left: 0
    top: 0
    right: 0
    bottom: 0
    background: rgba(0, 0, 0, .65)
  .close
    display: none
    width: 30px
    height: @width
    background: url('./imgs/close.png') no-repeat
    background-size: cover
    position: fixed
    right: 30px
    top: @right
    &:active
      background: url('./imgs/close-active.png') no-repeat
      background-size: cover

@-webkit-keyframes am-rotate
  from
    background-position: 0 0
  to
    background-position: -675px 0
