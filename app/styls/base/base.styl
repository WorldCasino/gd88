@require '/styls/import/vars.styl'
@require '/styls/import/mixins.styl'

@media screen and (-webkit-min-device-pixel-ratio: 2)
  .no-border
  .no-border:before
    border: none !important

.ik-hide
  display: none !important

// frozenui dialog样式重置

.ui-dialog
  .ui-dialog-bd > div
    h4, div
      text-align: center
    h4
      font-size: 18px
      font-weight: 900
      margin-bottom: 5px
    div
      font-size: 14px
      line-height: 1.5
      color: #555555

.ui-dialog-ft button
  color: #f00500
  line-height: 42px

// 弹出居中tips

.ik-tips-center
  position: fixed
  z-index: 9999
  left: 0
  top: 0
  background-color: rgba(0, 0, 0, .7)
  color: #FFFFFF
  border-radius(10px)
  font-size: 15px
  padding: 15px 25px

.ik-btn
  line-height: 44px
  text-align: center
  border-radius: 5px
  color: #ffffff
  width: 100%
  background-color: #4caf52
  &:active
    background-color: #37873b

.container-wrap
  margin-top: 45px
